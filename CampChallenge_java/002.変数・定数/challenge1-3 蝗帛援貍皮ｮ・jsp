    <body>
        <h1>Hello World!</h1>
        <%
        final int BASE = 100;
        int num = 20;
        
        int tasu = BASE + num;
        int hiku = BASE - num;
        int kakeru = BASE * num;
        int waru = BASE / num;
        int jouyo = BASE % num;
        
        out.print("100 + 20 =" + tasu + "   <br>");
        out.print("100 - 20 =" + hiku + "   <br>");
        out.print("100 * 20 =" + kakeru + "   <br>");
        out.print("100 / 20 =" + waru + "   <br>");
        out.print("100 / 20 の余りは" + jouyo + "   <br>");
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        %>
    </body>
</html>
